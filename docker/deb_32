FROM pyama/go:32bit
RUN apt-get update && apt-get install -yq --force-yes build-essential devscripts debhelper fakeroot --no-install-recommends
ADD ./ /go/src/github.com/STNS/STNS
WORKDIR /go/src/github.com/STNS/STNS
RUN cp binary/stns.bin package/deb/debian/
WORKDIR /go/src/github.com/STNS/STNS/package/deb/
CMD debuild -a${TARGET} -uc -us && cp ../*.deb ../../binary/
